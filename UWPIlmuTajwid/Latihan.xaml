<Page
    x:Class="UWPIlmuTajwid.Latihan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPIlmuTajwid"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="w640">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="abcd.Orientation" Value="Horizontal"/>
                        <!--Setter Target="btnNext.Margin" Value="0,30"/-->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="12,10,12,0" 
                   Style="{StaticResource BaseTextBlockStyle}"
                   Text="LATIHAN" />
        <StackPanel Grid.Row="1" Name="panelPertanyaan"
                    HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Pertanyaan"
                       Margin="5,20,5,0"/>

            <Border MinWidth="300"
                    Height="100" 
                    Margin="5,0"
                    BorderThickness="2" 
                    BorderBrush="Gray" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0" 
                             Name="boxPertanyaan"
                             Margin="5" BorderThickness="0"
                             TextWrapping="Wrap"
                             IsReadOnly="True" 
                             FontSize="20"
                             />
                    <TextBlock Grid.Row="1" 
                               Name="boxKalimah"
                               Margin="5"
                               HorizontalAlignment="Center" 
                               Foreground="Black"
                               FontSize="20"/>
                </Grid>
            </Border>

            <StackPanel Name="abcd" Orientation="Vertical">
                <StackPanel Name="ab">
                    <Button Name="_a" Content="A."
                            Margin="5"
                            MinWidth="300"
                            HorizontalContentAlignment="Left"
                            Click="_a_Click"/>
                    <Button Name="_b" Content="B."
                            Margin="5"
                            MinWidth="300"
                            HorizontalContentAlignment="Left"
                            Click="_b_Click"/>
                </StackPanel>
                <StackPanel Name="cd">
                    <Button Name="_c" Content="C."
                            Margin="5"
                            MinWidth="300"
                            HorizontalContentAlignment="Left"
                            Click="_c_Click"/>
                    <Button Name="_d" Content="D."
                            Margin="5"
                            MinWidth="300"
                            HorizontalContentAlignment="Left"
                            Click="_d_Click"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Name="statusJawaban"
                       Style="{StaticResource SubheaderTextBlockStyle}" 
                       HorizontalAlignment="Center"
                       Height="40"/>

            <Button Name="btnNext" Content="Lanjut >>"
                    Margin="0,20"
                    Width="100"
                    HorizontalAlignment="Center"
                    Click="btnNext_Click"/>
        </StackPanel>
    </Grid>
</Page>
